<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CalculatorActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/et_result" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" tools:text="-834.12" tools:focusableInTouchMode="false"
            app:layout_constraintHorizontal_bias="0.501" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.022"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_1" app:layout_constraintStart_toStartOf="@+id/btn_1"
            android:minWidth="48sp"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_4" app:layout_constraintStart_toStartOf="@+id/btn_4"
            android:minWidth="48sp"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_2"
            app:layout_constraintStart_toEndOf="@+id/btn_1" android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_1" android:minWidth="48sp"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_3" app:layout_constraintStart_toEndOf="@+id/btn_2" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_6" android:minWidth="48sp"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_7"
            app:layout_constraintStart_toStartOf="@+id/btn_7" android:minWidth="48sp"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_5"
            app:layout_constraintStart_toEndOf="@+id/btn_4"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/btn_4"
            android:minWidth="48sp"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_6" app:layout_constraintStart_toEndOf="@+id/btn_5" android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_5" android:minWidth="48sp"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_7"
            app:layout_constraintStart_toStartOf="@+id/et_new_number"
            android:minWidth="48sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/et_new_number"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_8"
            app:layout_constraintStart_toEndOf="@+id/btn_7"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/btn_7"
            android:minWidth="48sp"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_9" android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/btn_8"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_8" android:minWidth="48sp"/>
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_divide" app:layout_constraintStart_toEndOf="@+id/btn_9"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/btn_9"
            android:minWidth="48sp"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_multipli"
            app:layout_constraintStart_toEndOf="@+id/btn_6" android:layout_marginStart="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_6" android:minWidth="48sp"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add"
            app:layout_constraintStart_toEndOf="@+id/btn_equals"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/btn_equals"
            android:minWidth="48sp"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_minus"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_3" app:layout_constraintStart_toEndOf="@+id/btn_3"
            android:layout_marginStart="8dp" android:minWidth="48sp"/>
    <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_dot"
            app:layout_constraintStart_toEndOf="@+id/btn_0"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_0" android:layout_marginStart="8dp"
            android:minWidth="48sp"/>
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_equals"
            app:layout_constraintStart_toEndOf="@+id/btn_dot"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_dot" android:layout_marginStart="8dp"
            android:minWidth="48sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_operation" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/et_new_number" android:layout_marginEnd="8dp"
            android:textStyle="bold" android:textSize="18sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/et_result"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/et_new_number" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/et_result"
            app:layout_constraintStart_toStartOf="@+id/et_result" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/et_result" app:layout_constraintHorizontal_bias="0.543"/>
</android.support.constraint.ConstraintLayout>